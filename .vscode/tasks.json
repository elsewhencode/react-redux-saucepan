{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",    // for windows "command": "cmd"
    "isShellCommand": true,
    "args": [ "-c" ],   // for windows "args": ["/C"]
    "tasks": [
        {
            "taskName": "eslint",
            "suppressTaskName": true,
            "args": [
                "./node_modules/.bin/eslint ."  // To use locally installed eslint,  ./node_modules/eslint/bin/eslint.js .
            ],
            "problemMatcher": [
                "$eslint-stylish" // VS Code provides only “$eslint-stylish” and “$eslint-compact” problem-matcher out of the box. 
            ]
        }
    ]
}